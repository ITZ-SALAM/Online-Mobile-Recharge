@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero-section mt-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="hero-title">Online Mobile Recharge & Bill Payment</h1>
                <p class="lead">Recharge your mobile or pay bills instantly with ease. Fast, secure, and reliable services at your fingertips.</p>
                <a asp-controller="Recharge" asp-action="OnlineRecharge" class="btn btn-primary btn-lg mt-3">Get Started</a>
            </div>
            <div class="col-md-6 text-center">
                <img src="https://via.placeholder.com/500x400?text=Hero+Illustration" alt="Recharge Illustration" class="img-fluid hero-image" />
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="https://via.placeholder.com/500x300?text=Stats+Image" alt="Stats Image" class="img-fluid rounded" />
            </div>
            <div class="col-md-6">
                <h2>Grow Financial Digitization</h2>
                <p>Empowering users with seamless digital payment solutions.</p>
                <div class="row">
                    <div class="col-md-4 text-center">
                        <h3 class="stat-number">16%</h3>
                        <p>Recommendation Rate</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <h3 class="stat-number">4.8/5</h3>
                        <p>User Rating</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <h3 class="stat-number">10K+</h3>
                        <p>Active Users</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <h2 class="text-center mb-5">Our Awesome Features</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <img src="https://via.placeholder.com/60x60?text=Feature+1" alt="Global Payment" class="feature-icon mb-3" />
                    <h4>Global Payment</h4>
                    <p>Recharge or pay bills from anywhere in the world with secure transactions.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <img src="https://via.placeholder.com/60x60?text=Feature+2" alt="Online Payment" class="feature-icon mb-3" />
                    <h4>Online Payment</h4>
                    <p>Instant mobile recharges and bill payments with a few clicks.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <img src="https://via.placeholder.com/60x60?text=Feature+3" alt="Dedicated Support" class="feature-icon mb-3" />
                    <h4>Dedicated Support</h4>
                    <p>24/7 customer support to assist you anytime, anywhere.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Us Section -->
<section class="about-section py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="https://via.placeholder.com/500x300?text=About+Us" alt="About Us" class="img-fluid rounded" />
            </div>
            <div class="col-md-6">
                <h2>About Us</h2>
                <p>We are a dedicated team committed to making your mobile experience seamless and hassle-free. Our platform allows you to recharge your prepaid mobile, pay postpaid bills, and manage your transactions with ease.</p>
                <a asp-controller="Home" asp-action="About" class="btn btn-outline-primary mt-3">Learn More</a>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="services-section py-5">
    <div class="container">
        <h2 class="text-center mb-5">Our Services</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="service-card">
                    <img src="https://via.placeholder.com/300x150?text=Mobile+Recharge" alt="Service 1" class="img-fluid rounded mb-3" />
                    <h4>Mobile Recharge</h4>
                    <p>Instantly recharge your prepaid mobile with our easy-to-use platform.</p>
                    <a asp-controller="Recharge" asp-action="OnlineRecharge" class="btn btn-link">Learn More</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <img src="https://via.placeholder.com/300x150?text=Bill+Payment" alt="Service 2" class="img-fluid rounded mb-3" />
                    <h4>Bill Payment</h4>
                    <p>Pay your postpaid bills securely and on time.</p>
                    <a asp-controller="Account" asp-action="PostBillPayment" class="btn btn-link">Learn More</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <img src="https://via.placeholder.com/300x150?text=Transaction+History" alt="Service 3" class="img-fluid rounded mb-3" />
                    <h4>Transaction History</h4>
                    <p>Track all your transactions in one place.</p>
                    <a asp-controller="Account" asp-action="MyAccount" class="btn btn-link">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FAQs Section -->
<section class="faqs-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Frequently Asked Questions</h2>
        <div class="accordion" id="faqAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header" id="faq1">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1" aria-expanded="true" aria-controls="collapse1">
                        How can I recharge my mobile?
                    </button>
                </h2>
                <div id="collapse1" class="accordion-collapse collapse show" aria-labelledby="faq1" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Go to the <a asp-controller="Recharge" asp-action="OnlineRecharge">Online Recharge</a> page, enter your mobile number, select a plan, and complete the payment.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="faq2">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
                        Is it safe to make payments online?
                    </button>
                </h2>
                <div id="collapse2" class="accordion-collapse collapse" aria-labelledby="faq2" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Yes, we use secure payment gateways to ensure your transactions are safe and encrypted.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="faq3">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse3" aria-expanded="false" aria-controls="collapse3">
                        Can I pay my bill by phone?
                    </button>
                </h2>
                <div id="collapse3" class="accordion-collapse collapse" aria-labelledby="faq3" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Currently, we support online payments only. Visit <a asp-controller="Account" asp-action="PostBillPayment">Post Bill Payment</a> to pay your bill.
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
